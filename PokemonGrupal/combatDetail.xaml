            <Button x:Name="btn_encantoP1" Content="Encanto" Margin="226,636,0,0" VerticalAlignment="Top" Foreground="White" Background="Black" Visibility="Collapsed"/>
            <Button x:Name="btn_encantoP2" Content="Encanto" Margin="889,422,0,0" VerticalAlignment="Top" Foreground="White" Background="Black" Visibility="Collapsed"/>
            <Grid x:Name="grid_fin" Background="Black" Margin="327,231,327,224" Visibility="Collapsed">
